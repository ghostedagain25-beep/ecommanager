# Backend Server Environment Variables

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ecommanager

# Server Configuration
PORT=3002
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-here

# Shopify App Configuration (for OAuth)
SHOPIFY_API_KEY=your-shopify-app-api-key
SHOPIFY_API_SECRET=your-shopify-app-secret-key
APP_URL=http://localhost:3002

# Default Seed Passwords (Change these!)
DEFAULT_ADMIN_PASSWORD=change_me_admin
DEFAULT_USER_PASSWORD=change_me_user

# Email Configuration (for user verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
